@{
    ViewData["Title"] = "Log In";
}

@model TP_SGIAMT.Models.TUsuario

    <link href="~/css/StyleSheetLogIn.css" rel="stylesheet" />


<center>
    <div class="login-box">
        <div class="ro">
            <div class="col s12 m7">
                <div class="card">
                    <div class="card-contet">
                        <center>
                            <h4>Iniciar Sesion</h4>
                        </center>
                        <section>
                            <form asp-controller="Acces" asp-action="LogIn" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="input-field col s12">
                                    <label asp-for="Input.PkIuDni"></label>
                                    <input asp-for="Input.PkIuDni" class="form-control" />
                                    <span asp-validation-for="Input.PkIuDni" class="text-danger"></span>
                                </div>
                                <div class="input-field col s12">
                                    <label asp-for="Input.VuContraseña"></label>
                                    <input asp-for="Input.VuContraseña" class="form-control" />
                                    <span asp-validation-for="Input.VuContraseña" class="text-danger"></span>
                                </div>
                                <center>
                                    <button type="submit" id="btnlog" class="waves-effect waves-light btn">Ingresar</button>
                                    @*<div class="box-footer">
                                        <input type="submit" value="LOg" class="btn btn-primary" onclick="alerta()" />
                                    </div>*@
                                </center>
                            </form>
                        </section>
                    </div>
                            <label id="loginMessage" class="error">@Html.DisplayFor(m => m.ErrorMessage)</label>  
                    </div>
                </div>
            </div>
        </div>
</center>

@section Scripts { 
    @await Html.PartialAsync("_ValidationScriptsPartial")
}